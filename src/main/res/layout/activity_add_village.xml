<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:orientation="vertical"
    tools:context=".add_village">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="60dp"
                android:height="40dp"
                android:textColor="@color/black"
                android:background="@color/teal_200"
                android:paddingStart="12dp"
                android:text="Fillout The Village Details!"
                android:textFontWeight="75"
                android:textSize="20sp"
                tools:ignore="MissingConstraints" />


            <EditText
                android:id="@+id/e1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Village name"

                android:layout_marginTop="15dp"/>
            <EditText
                android:id="@+id/e2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Tahsil name"
                android:layout_marginTop="15dp"/>
            <EditText
                android:id="@+id/e3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter District name"
                android:layout_marginTop="15dp"/>
            <EditText
                android:id="@+id/e4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Post name"
                android:layout_marginTop="15dp"/>
            <EditText
                android:id="@+id/e5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name of Sarpanch of Village"
                android:layout_marginTop="15dp"/>
            <EditText
                android:id="@+id/e6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name Head of Justice"
                android:layout_marginTop="15dp"/>
            <EditText
                android:id="@+id/e7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Population of Village"
                android:layout_marginTop="15dp"/>
            <EditText
                android:id="@+id/e8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Male Population"
                android:layout_marginTop="15dp"/>
            <EditText
                android:id="@+id/e9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Female Population"
                android:layout_marginTop="15dp"/>
            <EditText
                android:id="@+id/e10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Famous Attraction"
                android:layout_marginTop="15dp"/>
            <EditText
                android:id="@+id/e11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Popular for"
                android:layout_marginTop="15dp"/>
            <EditText
                android:id="@+id/e12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="PINCODE"
                android:layout_marginTop="15dp"/>
            <EditText
                android:id="@+id/txtdata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Area Under Farming"
                android:layout_marginTop="15dp"/>

            //Add photo
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload Your Village Image"
                android:textSize="25dp"
                android:layout_marginStart="20dp"
                android:background="@color/teal_200"
                android:textColor="@color/black"
                />

            <LinearLayout
                android:id="@+id/layout_button"
                android:orientation="horizontal"
                android:layout_alignParentTop="true"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--Button for choosing image from gallery-->




                <Button
                    android:id="@+id/btnbrowse"
                    android:layout_width="124dp"
                    android:layout_height="54dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:background="#03A9F4"
                    android:text="Browse" />

                <Button
                    android:id="@+id/btnupload"
                    android:layout_width="164dp"
                    android:textSize="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_height="54dp"
                    android:layout_marginTop="10dp"
                    android:background="#03A9F4"
                    android:textColor="@color/black"
                    android:text="Submit Request" />


            </LinearLayout>
            <ImageView
                android:id="@+id/image_view"
                android:layout_width="200dp"

                android:layout_height="200dp" />
            <!--Image View for showing image chosen from gallery-->





        </LinearLayout>
    </ScrollView>



</LinearLayout>